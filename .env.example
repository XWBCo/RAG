# AlTi RAG Service Configuration

# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-api-key-here

# Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini

# Vector Store
CHROMA_PERSIST_DIR=./chroma_db
COLLECTION_NAME=alti_investments

# Document Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# Retrieval
SIMILARITY_TOP_K=5

# Legacy Data Source
LEGACY_DATA_DIR=../alti-risk-portfolio-app/data

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Response Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60

# Hybrid Retrieval Weights
BM25_WEIGHT=0.4
SEMANTIC_WEIGHT=0.6

# LangSmith Tracing (optional - enables detailed workflow traces)
# Sign up at https://smith.langchain.com to get an API key
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=alti-rag-service

# Cohere Reranking (optional - improves retrieval precision)
# Sign up at https://dashboard.cohere.com to get an API key (free tier: 1000/month)
COHERE_API_KEY=
